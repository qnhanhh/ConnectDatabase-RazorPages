@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ConnectDatabase.Pages.ProfileModel
@{
}

<div>
    <div>
        <h3>Profile management</h3>
        <a asp-page="./Order">My Orders</a>
    </div>

    <div>
        <form method="post">
            Company Name:
            <input asp-for="@Model.Customer.CompanyName" type="text" placeholder="@Model.Customer.CompanyName" /><br />
            <span asp-validation-for="@Model.Customer.CompanyName"></span><br />

            Contact Name:
            <input asp-for="@Model.Customer.ContactName" type="text" placeholder="@Model.Customer.ContactName" /><br />

            Contact Title:
            <input asp-for="@Model.Customer.ContactTitle" type="text" placeholder="@Model.Customer.ContactTitle" /><br />

            Address:
            <input asp-for="@Model.Customer.Address" type="text" placeholder="@Model.Customer.Address" /><br />

            Email:
            <input asp-for="@Model.Account.Email" type="email" placeholder="@Model.Account.Email" /><br />
            <span asp-validation-for="@Model.Account.Email"></span><br />
            <div>
                <input type="submit" value="Edit Info" />
            </div>
        </form>
    </div>
</div>